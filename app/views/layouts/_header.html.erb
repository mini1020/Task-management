<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Task App", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "トップ", root_path, {class: "right-menus"} %></li>
        <% if logged_in? %>
          <li><%= link_to "利用者一覧", '#', {class: "right-menus"} %></li>
          <li><%= link_to "タスク作成", new_user_task_path(current_user), {class: "right-menus"} %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle right-menus" data-toggle="dropdown">
             <%= @current_user.name %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li class="list-info">ユーザー</li>
              <li><%= link_to "プロフィール", current_user %></li>
              <li><%= link_to "設定", edit_user_path(current_user) %></li>
              <li class="list-info">タスク</li>
              <li><%= link_to "タスク一覧", user_tasks_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to "ログアウト", logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "ログイン", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>

<% provide(:title, @user.name) %>
<h1>タスク詳細</h1>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <table class="table table-bordered">
      <tbody>
        <tr>
          <td class="table-title col-md-2">ID</td>
          <td><%= @task.id %></td>
        </tr>
        <tr>
          <td class="table-title col-md-2">名称</td>
          <td><%= @task.name %></td>
        </tr>
        <tr>
          <td class="table-title col-md-2">詳細</td>
          <td><%= simple_format(text_url_to_link(h(@task.content)).html_safe) %></td>
        </tr>
        <tr>
          <td class="table-title col-md-2">作成日</td>
          <td><%= l(@task.created_at, format: :long) %></td>
        </tr>
        <tr>
          <td class="table-title col-md-2">更新日</td>
          <td><%= l(@task.updated_at, format: :long) %></td>
        </tr>
      </tbody>
    </table>
    <%= link_to "編集", edit_user_task_path(@user, @task), class: "btn btn-success btn-size" %>
    <%= link_to "削除", user_task_path(@user, @task), method: :delete, 
                data: { confirm: "「#{@task.name}」を削除します。よろしいですか？" },
                class: "btn btn-danger btn-size" %>
  </div>    
</div>

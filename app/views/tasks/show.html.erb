<% provide(:title, @user.name) %>
<h1>タスク詳細</h1>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <table class="table table-bordered table-style">
      <tbody>
        <tr>
          <td class="table-title">ID</td>
          <td><%= @task.id %></td>
        </tr>
        <tr>
          <td class="table-title">名称</td>
          <td><%= @task.name %></td>
        </tr>
        <tr>
          <td class="table-title">詳細</td>
          <td><%= @task.content %></td>
        </tr>
        <tr>
          <td class="table-title">作成日</td>
          <td><%= @task.created_at %></td>
        </tr>
        <tr>
          <td class="table-title">更新日</td>
          <td><%= @task.updated_at %></td>
        </tr>
      </tbody>
    </table>
    <%= link_to "編集", edit_user_task_path(@user, @task), class: "btn btn-success" %>
    <%= link_to "削除", user_task_path(@user, @task), method: :delete, 
                data: { confirm: "「#{@task.name}」を削除します。よろしいですか？" },
                class: "btn btn-danger" %>
  </div>    
</div>

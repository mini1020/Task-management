<% provide(:title, @user.name) %>
<h1>プロフィール</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <table class="table table-bordered">
      <tbody>
        <tr>
          <td class="table-title col-md-3">ID</td>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <td class="table-title col-md-3">名前</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td class="table-title col-md-3">メールアドレス</td>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <td class="table-title col-md-3">作成日</td>
          <td><%= l(@user.created_at, format: :long) %></td>
        </tr>
      </tbody>
    </table>
  </div>    
</div>
